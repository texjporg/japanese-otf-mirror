#!/usr/bin/perl
###################
###  main part  ###
###################
#initialize
&initialize_constant;
#processing arguments
&proc_arg;
#make ovp
&font_header;
&write_char;
#make vf & tfm
&make_vf;
&make_tfm;

##########################
####  dfn of sub rtns  ###
